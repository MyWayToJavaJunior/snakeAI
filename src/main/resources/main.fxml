            <AnchorPane prefHeight="600.0" prefWidth="550.0">
               <children>
                  <AnchorPane layoutX="10.0" layoutY="10.0" style="-fx-border-color: black;" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0">
