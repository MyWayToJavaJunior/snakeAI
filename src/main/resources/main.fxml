                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Game Type:" />
                        <Label text="Scores:" GridPane.rowIndex="1" />
                        <Label fx:id="gameTypeLabel" text="Label" GridPane.columnIndex="1" />
                        <Label fx:id="scoresLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                     </children>
                  </GridPane>
               </children>
            </AnchorPane>
         </children>
